<Window x:Class="Online_catalogue.Views.ResetPasswordView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resetare Parolă" Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Introduceți noua parolă:" FontSize="16" Margin="0,0,0,10"/>
            <PasswordBox x:Name="NewPasswordBox" Height="30" Margin="0,0,0,20"/>
            <Button Content="Resetează" Width="100" Height="30" HorizontalAlignment="Center"
                    Background="#3498db" Foreground="White" Click="ResetButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
